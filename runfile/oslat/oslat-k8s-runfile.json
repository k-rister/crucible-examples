{
    "benchmarks": [
        {
            "name": "oslat",
            "ids": "1",
            "mv-params": {
                "global-options": [
                    {
                        "name": "common-params",
                        "params": [
                            { "arg": "duration", "vals": [ "10" ], "role": "client" },
                            { "arg": "rtprio", "vals": [ "1" ], "role": "client" }
                        ]
                    }
                ],
                "sets": [
                    {
                        "include": "common-params"
                    }
                ]
            }
        }
    ],
    "tool-params": [
        {
            "tool": "sysstat",
            "params": [
                { "arg": "subtools", "val": "mpstat", "enabled": "yes" }
            ]
        },
        {
            "tool": "procstat"
        }
    ],
    "tags": {
        "run": "single-json-all-in-one",
        "userenv": "alma8"
    },
    "endpoints": [
        {
            "type": "k8s",
            "controller-ip": "127.0.0.1",
            "host": "localhost",
            "user": "root",
            "userenv": "alma8",
            "unique-project": 1,
            "kubeconfig": 0,
            "server": 1,
            "client": 1,
            "config": [
                {
                    "targets": [
                        { "role": "client", "ids": "1" }
                    ],
                    "settings": {
                        "securityContext": {
                            "capabilities": {
                                "add": [ "SYS_NICE", "IPC_LOCK" ]
                            }
                        }
                    }
                },
                {
                    "targets": "all",
                    "settings": {
                        "cpu-partitioning": 1
                    }
                }
            ]
        }
    ],
    "run-params": {
	"num-samples": 1,
	"test-order": "s"
    }
}
